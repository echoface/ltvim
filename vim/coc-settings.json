{
    "suggest.timeout": 500,
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "clangd.arguments": [
      "-j=4",
      "--clang-tidy",
      "--limit-results=20",
      "--background-index",
      "--header-insertion=never"
    ],
    "diagnostic.messageTarget": "echo"
}
